#:import MainGUI GUI.MainGUI

<Button>:
    size_hint: 1/3, 1/4

<FDDButton@Button>:
    size_hint_y: None
    height: '40dp'
    on_press: MainGUI.main_layout.popup_class.del_button_text(self.text)

<TuringLayout>:
    Button:
        pos_hint: {"x": 0, "bottom": 0}
        text: "Zmien alfabet"
        on_press: root.change_alphabet()

    Button:
        pos_hint: {"x": 1/3, "bottom": 0}
        text: "Zmien stany"
        on_press: root.change_state_list()

    Button:
        pos_hint: {"x": 2/3, "bottom": 0}
        text: "Zmien diagramy"
        on_press: root.change_state_diagram()

<AlphabetPopup>:
    new_chr: new_chr
    del_button: del_button
    add_error_msg: add_error_msg
    del_error_msg: del_error_msg
    Button:
        size_hint: 1/4, 1/10
        pos_hint: {"x": 0, "top": 0.95}
        text: "Add"
        on_press: root.add_chr()

    TextInput:
        size_hint: 0.72, 1/10
        pos_hint: {"x": 0.26, "top": 0.95}
        id: new_chr
        multiline: False

    Label:
        pos_hint: {"x": 0.12, "y": 0.3}
        color: 1,0,0,1
        id: add_error_msg

    Button:
        size_hint: 1/4, 1/10
        pos_hint: {"x": 0, "top": 0.70}
        text: "Del"
        on_press: root.del_chr()

    Button:
        id: del_button
        size_hint: 0.72, 1/10
        pos_hint: {"x": 0.26, "top": 0.70}
        on_release:
            root.open_DD(self)

    Label:
        pos_hint: {"x": 0.12, "y": 0.05}
        color: 1,0,0,1
        id: del_error_msg



<StatePopup>:
    Label:
        text: "Placeholder"
        pos_hint: {"x":0, "y": 0}

<DiagramPopup>:
    Label:
        text: "Placeholder"
        pos_hint: {"x":0, "y": 0}

