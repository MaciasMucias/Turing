<Button>:
    size_hint: 1/3, 1/4


<TuringLayout>:
    Button:
        pos_hint: {"x": 0, "bottom": 0}
        text: "Zmien alfabet"
        on_press: root.change_alphabet()

    Button:
        pos_hint: {"x": 1/3, "bottom": 0}
        text: "Zmien stany"
        on_press: root.change_state_list()

    Button:
        pos_hint: {"x": 2/3, "bottom": 0}
        text: "Zmien diagramy"
        on_press: root.change_state_diagram()

<AlphabetPopup>:
    new_chr: new_chr
    removed_chr: removed_chr

    Button:
        size_hint: 1/4, 1/10
        pos_hint: {"x": 0, "top": 0.95}
        text: "Add"
        on_press: root.add_chr()

    TextInput:
        size_hint: 0.72, 1/10
        pos_hint: {"x": 0.26, "top": 0.95}
        id: new_chr
        multiline: False

    Button:
        size_hint: 1/4, 1/10
        pos_hint: {"x": 0, "top": 0.75}
        text: "Del"

    ListView:
        id: removed_chr



<StatePopup>:
    Label:
        text: "Placeholder"
        pos_hint: {"x":0, "y": 0}

<DiagramPopup>:
    Label:
        text: "Placeholder"
        pos_hint: {"x":0, "y": 0}

