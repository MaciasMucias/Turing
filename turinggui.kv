#:import MainGUI GUI.MainGUI

<Button>:
    size_hint: 1/3, 1/4

<FDDButton@Button>:
    size_hint_y: None
    height: '40dp'
    on_press: MainGUI.main_layout.popup_class.del_button_text(self.text)

<TuringLayout>:
    Button:
        pos_hint: {"x": 0, "bottom": 0}
        text: "Change alphabet"
        on_press: root.change_alphabet()

    Button:
        pos_hint: {"x": 1/3, "bottom": 0}
        text: "Change states"
        on_press: root.change_state_list()

    Button:
        pos_hint: {"x": 2/3, "bottom": 0}
        text: "Change diagram"
        on_press: root.change_state_diagram()

<ModifyElementsPopup>:
    new_chr: new_chr
    del_button: del_button
    add_error_msg: add_error_msg
    del_error_msg: del_error_msg
    Button:
        size_hint: 1/4, 1/10
        pos_hint: {"x": 0, "top": 0.95}
        text: "Add"
        on_press: root.add_chr()

    TextInput:
        size_hint: 0.72, 1/10
        pos_hint: {"x": 0.26, "top": 0.95}
        id: new_chr
        multiline: False

    Label:
        pos_hint: {"x": 0.12, "y": 0.3}
        color: 1,0,0,1
        id: add_error_msg

    Button:
        size_hint: 1/4, 1/10
        pos_hint: {"x": 0, "top": 0.70}
        text: "Del"
        on_press: root.del_chr()

    Button:
        id: del_button
        size_hint: 0.72, 1/10
        pos_hint: {"x": 0.26, "top": 0.70}
        on_release:
            root.open_DD(self)

    Label:
        pos_hint: {"x": 0.12, "y": 0.05}
        color: 1,0,0,1
        id: del_error_msg


<DiagramPopup>:
    in_symbol: in_symbol
    in_state: in_state
    out_symbol: out_symbol
    out_state: out_state
    Label:
        text: "INPUT"
        pos_hint: {"x":-0.25, "y": 0.45}

    Label:
        text: "OUTPUT"
        pos_hint: {"x":0.25, "y": 0.45}

    Label:
        text: "Symbol"
        pos_hint: {"x":-0.25, "y": 0.30}

    Button:
        id: in_symbol
        size_hint: 0.48, 1/10
        pos_hint: {"x": 0.01, "top": 0.75}
        on_release: root.open_in_symbols(self)

    Label:
        text: "State"
        pos_hint: {"x":-0.25, "y": 0.05}

    Button:
        id: in_state
        size_hint: 0.48, 1/10
        pos_hint: {"x": 0.01, "top": 0.50}
        on_release: root.open_in_states(self)

    Label:
        text: "Symbol"
        pos_hint: {"x":0.25, "y": 0.30}

    Button:
        id: out_symbol
        size_hint: 0.48, 1/10
        pos_hint: {"right": 0.99, "top": 0.75}
        on_release: root.open_out_symbols(self)

    Label:
        text: "State"
        pos_hint: {"x":0.25, "y": 0.05}

    Button:
        id: out_state
        size_hint: 0.48, 1/10
        pos_hint: {"right": 0.99, "top": 0.50}
        on_release: root.open_out_states(self)

    Label:
        text: "Direction"
        pos_hint: {"x":0.25, "y": -0.20}

    Button:
        text: "L"
        size_hint: 0.20, 1/10
        pos_hint: {"right": 0.85, "top": 0.25}
        on_release: root.change_direction(self)

    Button:
        size_hint: 0.30, 1/10
        pos_hint: {"x": 0.10, "top": 0.25}
        text: "Add State Diagram"
        on_release: root.set_diagram()
